<div class="container" style="margin-top: 150px;">
    <div class="row">
        <div class="col">
            <p class="text-right">
                <span>Hola {{usuario}}<span>
                        <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesion <i class="fas
                   fa-sign-out-alt"></i></a>

            </p>

        </div>

    </div>

    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>listado de Novedades</h2>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>
                Nuevo</a>

        </div>
        <div class="col-3 text-right">
            <form class="form-inline my-2 my-lg-0" action="/admin/novedades" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q" {{#if q}}
                  value="{{q}}" {{/if}} >
                <button class="btn btn-secondary my-2 my-sm-0" 
                type="submit">
                   <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>





    </div>


    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class=" text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}} " class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                        {{/each}}
                    </tr>
                </tbody>

            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
              no se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}  

        </div>

    </div>


</div>